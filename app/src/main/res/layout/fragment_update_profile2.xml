<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:backgroundTint="#3EFFFFFF"
    tools:context=".UpdateProfile2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etFirstnameUserDetailsEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="first name..."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etLastnameUserDetailsEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="last name..."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email.."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="password..."
            android:inputType="textPassword"
            android:textColor="#000000" />

        <!-- Add the Phone EditText -->

        <EditText
            android:id="@+id/etPhoneUserDetailsEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="phone...."
            android:inputType="phone"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ivUserUserDetailsEdit"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:background="@drawable/ic_3"
            tools:srcCompat="@drawable/ic_3" />

        <!-- android:srcCompat="@android:mipmap/sym_def_app_icon"/> -->

        <Button
            android:id="@+id/btnUpdateUserDetailsEdit"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#755E83"
            android:text="UPDATE"
            android:textColor="#000000" />
    </LinearLayout>
</FrameLayout>